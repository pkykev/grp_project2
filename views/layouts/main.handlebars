              <button type="button" id="logout" class="btn btn-danger">Logout</button>
            </li>
            <i class="fa fa-envelope fa-3x" aria-hidden="true"></i>

            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
    <h1>
      Lover's Cruise
    </h1>
    <!-- Only display the logout button if the user is logged in -->
    {{#if logged_in}}

    {{/if}}
