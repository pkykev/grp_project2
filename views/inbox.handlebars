<body class="bg">
  <form class="form-content">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input type="email" class="form-control" id="sendto" aria-describedby="emailHelp" placeholder="Enter email">
      <small id="emailHelp" class="form-text text-muted">Who is this message going to?</small>
    </div>
    <br>
    <div class="form-group">
      <label for="exampleInputPassword1">Title</label>
      <input class="form-control" id="title" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Messaging</label>
      <textarea class="form-control" id="messagetxt" rows="3" placeholder="Hey beauitful..."></textarea>
    </div>
    <button type="button" class="btn btn-secondary" id="sendmessage">Send  <i class='fas fa-anchor'></i></button>
  </form>
    <div class="card-container">
    <ul class="scrollable-card">
      {{#each modifiedMail as |message|}}
      {{#if message.sender}}
      <li class="message-received">
        <h3>{{message.receiver}}</h3>
        <p>{{ message.messagetxt }}</p>
      </li>
      {{else}}
      <li class="message-sent">
        <h3>{{message.receiver}}</h3>
        <p>{{ message.messagetxt }}</p>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>


</ul>
